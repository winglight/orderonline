<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style src="new2.css" field="new2"></ui:style>
	<g:HTMLPanel>
		<div class="{new2.frame-wrap}">
			<!--面包屑 [[ -->
			<g:FlowPanel ui:field="breadCrumbs" />
			<!--面包屑 ]] -->


			<h3><g:InlineLabel ui:field="titleText" text="查看订单" />
			</h3>
			<span class="{new2.cutline}"></span>

			<div class="{new2.content-wrap}">
				<div class="{new2.form}">
					<div class="{new2.form-line}">
						<label class="{new2.label}"><span style="color:red">*</span>选择城市：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="city" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}"><span style="color:red">*</span>选择餐厅：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="restaurant" />
						</div>
					</div>
		
					<div class="{new2.form-line}">
						<label class="{new2.label}">就餐时间：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="reserveTime" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label2}">就餐人数：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="amountOfClient" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}">包间要求：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="favoriteRoom" />
						
						</div>
					</div>

					<div class="{new2.form-line}">
						<label class="{new2.label2}">订餐人姓名：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="orderPersonName" />
							<g:InlineLabel ui:field="orderPersonSex" />
						</div>
					</div>

					<div class="{new2.form-line}">
						<label class="{new2.label2}"><span style="color:red">*</span>手机号码：</label>
						<div class="{new2.element}">
								<g:InlineLabel ui:field="orderPersonPhone" />
							 用于接收预订信息
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label3}"> </label>
						<div class="{new2.element}">
							<g:CheckBox ui:field="otherPersonCheckbox" text="为他人订餐" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label2}">就餐人姓名：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="contactPersonName" />
							<g:InlineLabel ui:field="contactPersonSex" />
						</div>
					</div>

					<div class="{new2.form-line}">
						<label class="{new2.label2}">手机号码：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="contactPersonPhone" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label2}">其他要求：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="memo" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label2}">下单时间：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="placeOrderTime" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label2}">处理结果：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="result" />
						</div>
					</div>
					
					
				</div>
			</div>
			
			<span class="{new2.cutline}"></span>
			<div class="{new2.divtext}">共有 <g:InlineLabel ui:field="dataCount" styleName="{new2.divfont}"></g:InlineLabel> 条</div><div  class="{new2.divend}"></div>
			<div class="{new2.table}">
				<g:FlowPanel ui:field="resultPanel" />
			</div>


			<!--分页 [[ -->
			<div id="rewardlist_page" class="{new2.pager}">
				<div class="{new2.pager-left}">
					每页显示条数
					<select class="{new2.select}">
						<option>10</option>
					</select>
				</div>

				<div class="{new2.pager-right}">
					<g:FlowPanel ui:field="resultpage" />
				</div>
			</div>
			<!--分页 ]] -->
			

		</div>

	</g:HTMLPanel>
</ui:UiBinder> 