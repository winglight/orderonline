<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style src="new2.css" field="new2"></ui:style>
	<g:HTMLPanel>
		<div class="{new2.frame-wrap}">
			<!--面包屑 [[ -->
			<g:FlowPanel ui:field="breadCrumbs" />
			<!--面包屑 ]] -->


			<h3><g:InlineLabel ui:field="titleText" text="添加" />
			</h3>
			<span class="{new2.cutline}"></span>

			<div class="{new2.content-wrap}">
				<div class="{new2.form}">
				<div class="{new2.form-line}">
						<label class="{new2.label}"><span style="color:red">*</span>分店缩写：</label>
						<div class="{new2.element}">
							<g:TextBox ui:field="did" styleName="{new2.select}" />
						</div>
					</div>
									<div class="{new2.form-line}">
						<label class="{new2.label}"><span style="color:red">*</span>分店名：</label>
						<div class="{new2.element}">
							<g:TextBox ui:field="restaurant" styleName="{new2.select}" />
						</div>
					</div>

					<div class="{new2.form-line}">
						<label class="{new2.label}"><span style="color:red">*</span>城市：</label>
						<div class="{new2.element}">
							<g:TextBox ui:field="city" styleName="{new2.select}" />
						</div>
					</div>
											<div class="{new2.form-line}">
						<label class="{new2.label}"><span style="color:red">*</span>地址：</label>
						<div class="{new2.element}">
							<g:TextBox ui:field="address" styleName="{new2.select}" />
						</div>
					</div>
										<div class="{new2.form-line}">
						<label class="{new2.label}"><span style="color:red">*</span>电话：</label>
						<div class="{new2.element}">
							<g:TextBox ui:field="phone" styleName="{new2.select}" />
						</div>
					</div>
								<div class="{new2.form-line}">
					<label class="{new2.label2}">
						分店管理员：
					</label>
					<div class="{new2.element}">
						<g:FlowPanel ui:field="leaderPanel" width="200px"/>
					
						
					<span class="{new2.btn}">	<g:Button ui:field="chooseLeaderBtn">选择</g:Button></span>
						
					</div>
				</div>		
					<span class="{new2.cutline}"></span>
					<div class="{new2.form-line} {new2.form-line-btn}">
						<div class="{new2.element}">
							<span class="{new2.btn}">
								<g:Button ui:field="addBtn" text="保存" />
							</span>
						</div>
					</div>
				</div>
			</div>

		</div>

	</g:HTMLPanel>
</ui:UiBinder> 