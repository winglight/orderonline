<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>

	<ui:style src="new2.css" field="new2"></ui:style>
	<g:HTMLPanel>
		<div class="{new2.frame-wrap}">
			<!--面包屑 [[ -->
			<g:FlowPanel ui:field="breadCrumbs" />
			<!--面包屑 ]] -->


			<h3><g:InlineLabel ui:field="titleText" />
			</h3>
			<span class="{new2.cutline}"></span>

			<div class="{new2.content-wrap}">
				<div class="{new2.form}">
					<div class="{new2.form-line}">
						<label class="{new2.label}">用户编号：</label>
						<div class="{new2.element}">
							<g:TextBox maxLength="10" ui:field="staffNo" styleName="{new2.text}" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}"><span style="color:red">*</span>用户名：</label>
						<div class="{new2.element}">
							<g:TextBox maxLength="10" ui:field="staffName"
								styleName="{new2.text}"  />
						</div>
					</div>
					
					<div class="{new2.form-line}">
						<label class="{new2.label}"><span style="color:red">*</span>密码：</label>
						<div class="{new2.element}">
							<g:PasswordTextBox maxLength="16" ui:field="pwd"
								styleName="{new2.text}" />
						</div>
					</div>
										<div class="{new2.form-line}">
						<label class="{new2.label}"><span style="color:red">*</span>确认密码：</label>
						<div class="{new2.element}">
							<g:PasswordTextBox maxLength="16" ui:field="pwd2"
								styleName="{new2.text}" />
						</div>
					</div>
				
					<div class="{new2.form-line}">
						<label class="{new2.label}">电话：</label>
						<div class="{new2.element}">
							<g:TextBox maxLength="20" ui:field="phone" styleName="{new2.text}" />
						</div>
					</div>

				
					
					
					<div class="{new2.form-line}">
						<label class="{new2.label}">用户角色：</label>
						<div class="{new2.element}">
							<g:CheckBox ui:field="admin" text="餐厅管理员" />
							<g:CheckBox ui:field="gift" text="分店管理员" />
						</div>
					</div>


					<span class="{new2.cutline}"></span>
					<div class="{new2.form-line} {new2.form-line-btn}">
						<div class="{new2.element}">
							<span class="{new2.btn}">
								<g:Button ui:field="addBtn" text="保存" />
							</span>
							<span class="{new2.btn}" style="display:none">
								<g:Button ui:field="importBtn" text="外部导入" />
							</span>
						</div>
					</div>
				</div>
			</div>

		</div>

	</g:HTMLPanel>
</ui:UiBinder> 